<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_btn_color</item>
    </style>

    <style name="StyleTitleCategories14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/title_categories_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleDescriptionCategories12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/description_categories_color</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="StyleHeaderButton20" parent="Widget.Material3.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textColor">@color/title_categories_color</item>
        <item name="backgroundTint">@color/main_activity_background_color</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="StyleIngredientsTitle20">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textColor">@color/title_categories_color</item>
        <item name="backgroundTint">@color/main_activity_background_color</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>